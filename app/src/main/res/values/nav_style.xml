<resources>
    <style name="BaseNav">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">#ffffffff</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="dividerInsetStart">0dp</item>
        <item name="dividerColor">#cccccc</item>
        <item name="dividerInsetEnd">0dp</item>
        <item name="itemVerticalPadding">0dp</item>
        <item name="itemHorizontalPadding">10dp</item>
    </style>
    <style name="NoPaddingItemText">
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="BaseNav.UserInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#078cf8</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="BaseNav.UserInfo.Avatar" parent="BaseImage">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="BaseNav.UserInfo.FullName" parent="BaseText">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BaseNav.UserInfo.Username" parent="BaseText">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>