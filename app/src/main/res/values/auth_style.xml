<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoginActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:background">#ffffffff</item>
    </style>

    <style name="ButtonMethodLogin">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonMethodLogin.FrameImage" parent="RoundedCornerImage">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="ButtonMethodLogin.Image">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="ButtonMethodLogin.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="ButtonMethodLogin.Text.Small" parent="ButtonMethodLogin.Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LinkToRegister" parent="ButtonMethodLogin">
        <item name="android:gravity">center</item>
        <item name="android:background">#ffffffff</item>
    </style>

    <style name="LinkToRegister.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="LinkToRegister.Text.Link" parent="LinkToRegister.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="LoginViaAccount">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LoginViaAccount.AppLogo">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">140dp</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="LoginViaAccount.AccountInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="LoginViaAccount.AccountInput.Group">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="LoginViaAccount.AccountInput.Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#CCCCCC</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginStart">34dp</item>
    </style>

    <style name="LoginViaAccount.AccountInput.Group.Icon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="LoginViaAccount.AccountInput.Group.Input" parent="BaseEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="LoginViaAccount.AccountInput.Group.ButtonClear" parent="BaseImage">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LoginViaAccount.Actions" parent="LinearBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="LoginViaAccount.Actions.ButtonSubmit" parent="BaseButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">#166baf</item>
    </style>

    <style name="LoginViaAccount.Actions.LinkForgetPassword">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="LoginViaAccount.ButtonInfo" parent="BaseImage">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ForgetPassword" parent="LinearBase">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ForgetPassword.Toolbar" parent="LinearBase">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation"> horizontal</item>
        <item name="android:background">#097fb4</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ForgetPassword.Toolbar.Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ForgetPassword.Toolbar.CloseIcon" parent="BaseImage">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>
    <style name="ForgetPassword.TextContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="ForgetPassword.Input" parent="BaseEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:background">@drawable/border_block</item>
    </style>

    <style name="ForgetPassword.Footer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginTop"> 50dp</item>
        <item name="android:background">#cccccc</item>
    </style>

    <style name="ForgetPassword.Footer.ButtonNext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/radius_block</item>
        <item name="android:backgroundTint">#078cf8</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="Register.Group" parent="LinearBase">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Register.Group.Last" parent="Register.Group">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Register.Group.Label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart"> 10dp</item>
        <item name="android:paddingEnd"> 10dp</item>

    </style>

    <style name="Register.Group.Input" parent="BaseEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>

        <item name="android:paddingStart"> 10dp</item>
        <item name="android:paddingEnd"> 10dp</item>
    </style>

    <style name="Register.Footer" parent="LinearBase">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="Register.Footer.ButtonSubmit" parent="BaseButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">#078cf8</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="Register.Footer.Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>
</resources>