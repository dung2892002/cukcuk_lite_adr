<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Calculator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="Calculator.Header" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">#1A73E7</item>
        <item name="android:titleTextColor">#ffffff</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="Calculator.Header.Label" parent="BaseText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Calculator.Header.Button" parent="BaseImage">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    
    <style name="Calculator.Body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#ffffffff</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Calculator.Body.Value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">end</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/rounded_border_gray</item>
    </style>
    
    <style name="Calculator.Body.Button" parent="BaseButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">@drawable/rounded_border_gray</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/gray_80</item>
    </style>

    <style name="Calculator.Body.Button.Light" parent="Calculator.Body.Button">
        <item name="android:backgroundTint">#ffffffff</item>
    </style>

    <style name="Calculator.Body.Button.Image" parent="Calculator.Body.Button">
        <item name="android:gravity">center</item>
    </style>


    <style name="Calculator.Body.Button.Image.Light" parent="Calculator.Body.Button.Image">
        <item name="android:backgroundTint">#ffffffff</item>
    </style>

    <style name="Calculator.Body.Button.SmallerTextSize" parent="Calculator.Body.Button">
<!--        <item name="android:textSize">10sp</item>-->
    </style>

    <style name="Calculator.Body.Button.Submit" parent="Calculator.Body.Button">
        <item name="android:backgroundTint">#1a73e7</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    
</resources>