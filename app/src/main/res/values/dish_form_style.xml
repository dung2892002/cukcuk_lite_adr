<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DishForm">

    </style>
    <style name="DishForm.Group" parent="DishForm">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">#ffffffff</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DishForm.Group.Label" parent="BaseText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#8C8B8B</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="DishForm.Group.Input" parent="BaseEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="DishForm.Group.Button" parent="BaseImage">
        <item name="android:layout_width">16sp</item>
        <item name="android:layout_height">16sp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="DishForm.ButtonSubmit" parent="BaseButton" >
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">#078cf8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="DishForm.Group.Last" parent="DishForm.Group">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="DishForm.Group.Last.Child" parent="DishForm.Group">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DishForm.Group.Last.Child.Button" parent="RoundedImage">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="borderWidth">0dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:backgroundTint">@color/color_32</item>
    </style>

    <style name="DishForm.Group.Last.Child.Button.Image" parent="RoundedImage">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>