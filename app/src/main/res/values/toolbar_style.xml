<resources>
    <style name="BaseToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">#1A73E7</item>
        <item name="android:titleTextColor">#ffffff</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="BaseToolbar.Title" parent="BaseText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BaseToolbar.Title.Bold" parent="BaseToolbar.Title">
        <item name="android:textStyle">bold</item>
    </style>
</resources>