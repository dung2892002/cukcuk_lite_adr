<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedRadius">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="RemovePaddingAndMargin">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="LinearBase" parent="RemovePaddingAndMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#ffffffff</item>
    </style>

    <style name="BaseEditText" parent="RemovePaddingAndMargin">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BaseImage" parent="RemovePaddingAndMargin">
        <item name="android:background">@android:color/transparent</item>
        <item name="contentDescription">@string/content_description</item>
    </style>

    <style name="BaseText" parent="RemovePaddingAndMargin">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Line" parent="RemovePaddingAndMargin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#cccccc</item>
    </style>

    <style name="Line.Vertical" parent="Line">
        <item name="android:layout_width">1dp</item>
