<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Statistic_Item">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/statisticByInventoryItemColor"
        style="@style/Statistic_Item_ColorBlock.Inventory"
        tools:ignore="TextSizeCheck">

        <TextView
            android:id="@+id/statisticByInventoryItemSortOrder"
            style="@style/Statistic_Item_ColorBlock_Inventory_Text"
            android:text="1"
            tools:ignore="HardcodedText" />
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout style="@style/Statistic_Item_Vertical">

        <LinearLayout style="@style/Statistic_Item_Group_Horizontal">
            <LinearLayout style="@style/Statistic_Group_Vertical">

                <TextView
                    android:id="@+id/statisticByInventoryItemInventoryName"
                    style="@style/Statistic_Inventory_InventoryName"
                    android:text="Bún đậu đầy đủ có dồi"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/statisticByInventoryItemQuantity"
                        style="@style/Statistic_Inventory_InventoryName"
                        android:text="4"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/statisticByInventoryItemUnitName"
                        style="@style/Statistic_Inventory_InventoryName"
                        android:text="Suất"
                        android:textColor="#999797"
                        tools:ignore="HardcodedText,TextContrastCheck" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/statisticByInventoryItemAmount"
                style="@style/Statistic_Inventory_Amount"
                android:text="200.000"
                tools:ignore="HardcodedText">

            </TextView>
        </LinearLayout>



        <View style="@style/Line" android:id="@+id/statisticByInventoryLine"/>
    </LinearLayout>

</LinearLayout>