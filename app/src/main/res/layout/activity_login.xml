<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".views.LoginActivity"
    style="@style/LinearBase">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_gravity="center"
        android:contentDescription="logo app"
        android:scaleType="fitXY"
        android:src="@drawable/app_logo"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="10dp"
        android:paddingTop="20dp"
        android:orientation="vertical"
        android:layout_weight="1"
        tools:ignore="InefficientWeight">

        <LinearLayout
            android:id="@+id/btnLoginViaFacebook"
            tools:ignore="UseCompoundDrawables"
            style="@style/ButtonMethodLogin"
            >

            <com.google.android.material.imageview.ShapeableImageView
                style="@style/ButtonMethodLogin.Image"
                app:srcCompat="@drawable/fb_icon"
                android:contentDescription="fb"
                tools:ignore="HardcodedText"
                app:shapeAppearanceOverlay="@style/RoundedCornerImage"/>

            <TextView
                style="@style/ButtonMethodLogin.Text"
                android:background="@drawable/rounded_textview"
                android:backgroundTint="#1076C8"
                android:text="Đăng nhập bằng Facebook"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnLoginViaGoogle"
            style="@style/ButtonMethodLogin">

            <com.google.android.material.imageview.ShapeableImageView
                style="@style/ButtonMethodLogin.Image"
                android:src="@drawable/google_icon"
                android:contentDescription="fb"
                tools:ignore="HardcodedText"
                app:shapeAppearanceOverlay="@style/RoundedCornerImage"/>

            <TextView
                style="@style/ButtonMethodLogin.Text"
                android:background="@drawable/rounded_textview"
                android:backgroundTint="#D0345B"
                android:text="Đăng nhập bằng Google"
                tools:ignore="HardcodedText"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnLoginViaAccount"
            style="@style/ButtonMethodLogin">

            <com.google.android.material.imageview.ShapeableImageView
                style="@style/ButtonMethodLogin.Image"
                android:src="@drawable/phone_icon"
                android:contentDescription="fb"
                tools:ignore="HardcodedText"
                app:shapeAppearanceOverlay="@style/ButtonMethodLogin.Image"/>

            <TextView
                style="@style/ButtonMethodLogin.Text"
                android:background="@drawable/rounded_textview"
                android:backgroundTint="#23B62C"
                android:text="Đăng nhập bằng\nSố điện thại hoặc email"
                tools:ignore="HardcodedText"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/LinkToRegister">

        <TextView
            style="@style/LinkToRegister.Text"
            android:text="Bạn chưa có tài khoản?"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/btnGoRegister"
            style="@style/LinkToRegister.Text.Link"
            android:paddingHorizontal="20dp"
            android:text="Đăng ký"
            tools:ignore="HardcodedText" />

    </LinearLayout>


</LinearLayout>