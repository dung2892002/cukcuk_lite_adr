<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".mvp_modules.register.RegisterActivity"
    style="@style/LinearBase">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/registerToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="10dp"
        android:background="#0F91CC"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:titleTextColor="#FFFFFF"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout style="@style/Register.Group">

        <TextView
            style="@style/Register.Group.Label"
            android:text="Số điện thoại hoặc email"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edtRegisterUsername"
            style="@style/Register.Group.Input"
            android:hint="Nhập số điện thoại hoặc email"
            android:importantForAutofill="no"
            android:inputType="text"
            tools:ignore="HardcodedText,TextContrastCheck,VisualLintTextFieldSize" />


        <View style="@style/Line" />
    </LinearLayout>


    <LinearLayout
        style="@style/Register.Group.Last"
        tools:ignore="InefficientWeight">
        <TextView
            style="@style/Register.Group.Label"
            android:text="Mật khẩu"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edtRegisterPassword"
            style="@style/Register.Group.Input"
            android:hint="Nhập mật khẩu"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            tools:ignore="HardcodedText,TextContrastCheck,VisualLintTextFieldSize" />

        <View style="@style/Line" />
    </LinearLayout>


    <LinearLayout
        style="@style/Register.Footer">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmitRegister"
            style="@style/Register.Footer.ButtonSubmit"
            android:text="Đăng ký"
            tools:ignore="HardcodedText,VisualLintButtonSize" />

        <TextView
            android:id="@+id/txtFooterContent"
            style="@style/Register.Footer.Content"
            android:text="Khi bấm nút Đăng ký đồng nghĩa với việc bạn dã độc, hiểu và đồng ý với thỏa thuận sử dụng dịch vụ CUKCUK.VN"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>