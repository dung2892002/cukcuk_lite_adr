<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/LinearBase"
    tools:context=".mvp_modules.sale.views.SelectDishActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/BaseToolbar"
        app:menu="@menu/menu_select_dish">

        <TextView
            android:id="@+id/txtToolbarTitle"
            style="@style/BaseToolbar.Title"
            android:text="Chọn món"
            tools:ignore="HardcodedText" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerListDishSelect"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ffffffff"/>
    <View style="@style/Line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#E0E0E0"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_facebook"
            android:layout_gravity="center_vertical"
            android:tint="#078cf8"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOpenInputTable"
            style="@style/DishForm.ButtonSubmit"
            android:layout_width="wrap_content"
            android:minWidth="44dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="0dp"
            android:backgroundTint="#FFFFFFFF"
            android:layout_height="36dp"
            android:text="5"
            android:textColor="@color/black"
            android:tint="#078cf8"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/user_icon"
            android:layout_gravity="center_vertical"
            android:tint="#078cf8"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOpenInputPeople"
            style="@style/DishForm.ButtonSubmit"
            android:layout_width="wrap_content"
            android:minWidth="44dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="0dp"
            android:backgroundTint="#FFFFFFFF"
            android:layout_height="36dp"
            android:text="5"
            android:textColor="@color/black"
            android:tint="#078cf8"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/txtOrderTotalPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="60.000"
            tools:ignore="HardcodedText" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="#E2EEFF">


        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnOpenMic"
            style="@style/DishForm.ButtonSubmit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="0dp"
            android:backgroundTint="#FFFFFFFF"
            android:layout_height="48dp"
            android:text="CẤT"
            android:textColor="#078cf8"
            android:src="@drawable/ic_phone"
            android:tint="#078cf8"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSaveOrder"
            style="@style/DishForm.ButtonSubmit"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="0dp"
            android:backgroundTint="#FFFFFFFF"
            android:text="CẤT"
            android:textColor="#078cf8"
            tools:ignore="HardcodedText" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCreateBill"
            style="@style/DishForm.ButtonSubmit"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:text="THU TIỀN"
            tools:ignore="HardcodedText" />

    </LinearLayout>
    <View style="@style/Line"/>






</LinearLayout>