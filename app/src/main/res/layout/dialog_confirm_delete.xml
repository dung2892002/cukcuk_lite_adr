<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ForgetPassword">


    <LinearLayout
        style="@style/ForgetPassword.Toolbar"
        tools:ignore="UselessParent">

        <TextView
            style="@style/ForgetPassword.Toolbar.Title"
            android:text="CUKCUK LITE"
            tools:ignore="HardcodedText" />

        <ImageButton
            android:id="@+id/btnCloseDeleteDialog"
            style="@style/ForgetPassword.Toolbar.CloseIcon"
            android:src="@drawable/quit_icon"
            android:contentDescription="no"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <TextView
        android:id="@+id/content"
        style="@style/ForgetPassword.TextContent"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/ForgetPassword.Footer">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancelDelete"
            style="@style/ForgetPassword.Footer.ButtonNext"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnAcceptDelete"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Không"
            android:textColor="#FF0000"
            android:backgroundTint="#ffffffff"
            tools:ignore="HardcodedText"
            android:paddingHorizontal="10dp"
            android:layout_height="40dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAcceptDelete"
            style="@style/ForgetPassword.Footer.ButtonNext"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Có"
            tools:ignore="HardcodedText"
            android:paddingHorizontal="10dp"
            android:layout_height="40dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>