<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/radius_block">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#078cf8"
        android:gravity="center"
        android:padding="6dp"
        android:text="Thời gian"
        android:textColor="@color/white"
        tools:ignore="HardcodedText,TextContrastCheck" />


    <LinearLayout
        android:id="@+id/openDateStartPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="6dp"
            android:text="Từ ngày"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/dateStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_arrow_right"/>

    </LinearLayout>
    <View style="@style/Line" />



    <LinearLayout
        android:id="@+id/openDateEndPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="6dp"
            android:text="Đến ngày"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/dateEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_arrow_right"/>
    </LinearLayout>
    <View style="@style/Line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="#E2E2E2">
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancelStatisticDateToDate"
            style="@style/DishForm.ButtonSubmit"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="2"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="0dp"
            android:backgroundTint="#FFFFFF"
            android:textColor="#FF0000"
            android:text="HỦY BỎ"
            tools:ignore="HardcodedText,VisualLintButtonSize" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmitStatisticDateToDate"
            style="@style/DishForm.ButtonSubmit"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="0dp"
            android:layout_weight="2"
            android:text="ĐỒNG Ý"
            tools:ignore="HardcodedText,VisualLintButtonSize" />

    </LinearLayout>

</LinearLayout>