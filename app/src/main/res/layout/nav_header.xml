<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/BaseNav.UserInfo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.imageview.ShapeableImageView
        style="@style/BaseNav.UserInfo.Avatar"
        android:src="@drawable/default_avatar"
        app:shapeAppearanceOverlay="@style/RoundedImage"/>

    <TextView
        android:id="@+id/txtNavHeaderFullName"
        style="@style/BaseNav.UserInfo.FullName"/>

    <TextView
        android:id="@+id/txtNavHeaderUsername"
        style="@style/BaseNav.UserInfo.Username" />

</LinearLayout>